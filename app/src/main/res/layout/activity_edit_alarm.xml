<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_edit_reminder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vibodha.pinit.View.EditReminder">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_alarm">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="  Edit Alarm"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:ems="10"
                android:id="@+id/edit_alarm_txt_name"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Longitude"
                android:ems="10"
                android:id="@+id/edit_alarm_txt_longitude"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Latitude"
                android:ems="10"
                android:id="@+id/edit_alarm_txt_latitude"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Location"
                android:layout_gravity="center"
                android:id="@+id/edit_alarm_btn_change_location"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Arrival Alarm"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:id="@+id/btn_edit_alarm"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
<android.support.design.widget.FloatingActionButton
android:layout_margin="10dp"
android:id="@+id/btn_home"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
app:borderWidth="0dp"
app:elevation="8dp"
app:layout_anchor="@id/edit_alarm"
app:layout_anchorGravity="bottom|right|end"
app:srcCompat="@drawable/ic_action_home" />
    </android.support.design.widget.CoordinatorLayout>