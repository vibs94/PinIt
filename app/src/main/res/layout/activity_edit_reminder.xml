<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_edit_reminder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vibodha.pinit.View.EditReminder">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_reminder">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:ems="10"
                android:id="@+id/txt_name"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Longitude"
                android:ems="10"
                android:id="@+id/txt_longitude"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Latitude"
                android:ems="10"
                android:id="@+id/txt_latitude"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Location"
                android:layout_gravity="center"
                android:id="@+id/btn_change_location"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:hint="Note"
                android:textAlignment="textStart"
                android:id="@+id/txt_note"

                />

            <TextView
                android:text="Priority"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:id="@+id/textView"
                />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="0dp"
                android:id="@+id/ratingBar"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Reminder"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:id="@+id/btn_edit_reminder"/>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_margin="10dp"
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:layout_anchor="@id/edit_reminder"
        app:layout_anchorGravity="bottom|right|end"
        app:srcCompat="@drawable/ic_action_home" />
</android.support.design.widget.CoordinatorLayout>
